<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_menu_lateral"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".VersaoActivity">

        <include layout="@layout/actionbar"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:text="Aplicativo Bild DiagnÃ³sticos"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="110dp"
                android:layout_marginStart="110dp"
                android:src="@drawable/logo_bild_ounded" />

            <TextView
                android:id="@+id/versaoText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="80dp"
                android:text="@string/versao"
                android:gravity="bottom|center"
                android:layout_alignParentBottom="true"
                android:textSize="21dp"
                android:textColor="#696969"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/poweredby"
                android:layout_marginBottom="15dp"
                android:gravity="bottom|center"
                android:textSize="20dp"
                android:textColor="#b2b0ae"/>
        </RelativeLayout>




    </LinearLayout>

    <include layout="@layout/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>